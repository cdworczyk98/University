@model StaffShiftModel
@{
}

<h1>Add Item</h1>
<form asp-controller="StaffShift" asp-action="AddStaffShift" method="post">
    <div class="form-group">
        <label asp-for="ShiftID"></label>
        <input asp-for="ShiftID" class="form-control col-xl-3" required />
    </div>
    <div class="form-group">
        <label asp-for="StaffID"></label>
        <input asp-for="StaffID" class="form-control col-xl-3" required />
    </div>
    <div class="form-group">
        <label asp-for="OverTimeDate"></label>
        @Html.TextBoxFor(model => model.OverTimeDate)
        @Html.ValidationMessageFor(model => model.OverTimeDate)
    </div>
    <div class="form-group">
        <label asp-for="ExtraHours"></label>
        <input asp-for="ExtraHours" class="form-control col-xl-3" required />
    </div>
    <div class="form-group">
        <label asp-for="OvertimeMultiplier"></label>
        <input asp-for="OvertimeMultiplier" class="form-control col-xl-3" />
    </div>
    <button class="btn btn-success" type="submit">Add me</button>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $('#IssueDate').datepicker({
            dateFormat: "dd/mm/yy",
            showStatus: true,
            showWeeks: true,
            currentText: 'Now',
            autoSize: true,
            gotoCurrent: true,
            showAnim: 'blind',
            highlightWeek: true
        });
    });
</script>

